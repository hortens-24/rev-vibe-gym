{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build active file",
      "type": "shell",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++20", "-Wall", "-g",
        "${file}",
        "-o", "${fileDirname}/${fileBasenameNoExtension}"   // ← 同じフォルダ！
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    }
  ]
}
